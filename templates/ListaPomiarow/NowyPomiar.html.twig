{% extends 'base.html.twig' %}

{% block title %}
Nowy Pomiar
{% endblock %}

{% block cont %}
    <div class="container">
        <h1>Dodaj Nowy Pomiar </h1>
<div class="row">
    <div class="col-sm-6">
    <form id="formId" action='{{ path('Nowy_pomiar') }}' enctype="multipart/form-data" method="post">
        <input type="hidden" name="token" value="{{ csrf_token('new-item') }}"/>

        <div class="custom-file">
            <input type="file" class="custom-file-input" id="customFile" name="MyFile">
            <label class="custom-file-label" for="customFile">Wybierz plik </label>
        </div>
    <input class="btn btn-success" type="submit" value="Dodaj Pomiar ">
    </form>
        {% if error %}
            <div class="alert-danger">{{error}}</div>
        {% endif %}
    </div>

</div>
    </div>

    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Papiery{% endblock %}

{% block cont %}
<div class="container">
<a href="{{ url('papierNowyPapier') }}" class="btn btn-success">Dodaj Nowy </a>
<table class="table table-bordered table-striped">
    <tr><th>Nazwa</th> <th>Gramatura</th><th>producent</th><th>Edycja</th></tr>
    {% for pr in prod %}
        <tr>
            <td>{{ pr.nazwa }}</td>
            <td> {{ pr.gramatura }}</td>
            <td> {{ pr.producent }}</td>
            <td><form action="{{ path('papierEdycjaPapieru') }}" method="post">
                    <input type="hidden" name="id" value="{{ pr.id }}">
                    <input type="submit" value="Edycja" class="btn btn-info">
                </form>
            </td>
        </tr>

    {% endfor %}
</table>
</div>

    {% endblock %}

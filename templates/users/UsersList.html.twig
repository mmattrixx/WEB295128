{% extends 'base.html.twig' %}

{% block cont %}

    <div class="container">
        <h2>Lista Użytkowników </h2>
        <a href="{{ path('new_user') }}" class="btn btn-outline-success">Nowy użytkownik</a>
        <table class="table table-striped table-bordered">
            <tr><th>Login</th><th>Nazwa</th><th>Edycja</th></tr>
            {% for user in users %}
                <tr><td>{{ user.getusername }}</td><td>{{ user.getFullName }}</td><td><a href="{{ path('user_edit',{'id':user.id}) }}" class="btn btn-outline-dark">Edytuj</a></td></tr>
            {% endfor %}

        </table>
    </div>
{% endblock %}


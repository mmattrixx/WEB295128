{% extends 'base.html.twig' %}
{% block cont %}
<div class="container">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="col-lg-5 p-5">
            <div class="form-group">
                <label class="form-control-label required" for="username">Login</label>
                <input type="text" id="username" name="_username" required="required" class="form-control"
                       value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label class="form-control-label required" for="password">Has≈Ço</label>
                <input type="password" id="password" name="_password" required="required" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" id="Login" name="Login" class="btn-secondary btn">Zaloguj</button>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
        </div>
    </form>

</div>
    {% endblock %}

